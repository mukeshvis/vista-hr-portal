  id                Int      @id @default(autoincrement())
  designation_name  String   @db.VarChar(100)
  status           Int      @default(1)
  username         String   @db.VarChar(100)
  date             DateTime @db.Date
  time             String   @db.VarChar(50)
}

// Grades table for mapping emp_grade_id
model grades {
  id                   Int      @id @default(autoincrement())
  employee_grade_type  String?  @db.VarChar(100)
  category             String?  @db.VarChar(100)
  company_id           Int?
  designation_id       Int?
  status               Int?     @default(1)
  username             String?  @db.VarChar(100)
  date                 DateTime? @db.Date
  time                 String?  @db.VarChar(50)
}

// Working Hours Policy table for mapping working_hours_policy_id
model working_hours_policy {
  id                    Int        @id @default(autoincrement())
  policy_name           String     @db.VarChar(100)
  start_time            String     @db.VarChar(10)
  end_time              String     @db.VarChar(10)
  break_start_time      String?    @db.VarChar(10)
  break_end_time        String?    @db.VarChar(10)
  total_hours           Decimal    @db.Decimal(4, 2)
  break_duration        Int?       @default(0)
  late_arrival_grace    Int?       @default(0)
  early_departure_grace Int?       @default(0)
  overtime_rate         Decimal?   @db.Decimal(5, 2)
  weekend_days          String?    @db.VarChar(20)
  status                Int        @default(1)
  created_by            String?    @db.VarChar(100)
  date                  DateTime   @db.Date
  time                  String     @db.VarChar(50)

  // Relationship
  employees             employee[]
}

// Leave Policy table for mapping leaves_policy_id
